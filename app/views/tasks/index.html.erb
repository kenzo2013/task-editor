<div class="pt-16 pb-20 px-4 max-w-7xl mx-auto sm:px-6 lg:pb-28 lg:px-8">
  
  <h2 class="text-3xl tracking-tight font-extrabold text-gray-900 text-center sm:text-5xl">
    All tasks
  </h2>
  <p class="mt-3 mx-auto text-xl text-gray-500 text-center sm:mt-4">Here are the latest
    tasks</p>
  <div class="max-w-lg mx-auto">
    <div class="px-4 py-2 mt-5 font-semibold text-sm text-zinc-800 rounded-sm shadow-sm ring ring-zinc-400 hover:ring-zinc-500">
      <%= link_to 'Add task', new_task_path, data: { turbo_frame: dom_id(Task.new) } %>
    </div>
  </div>
  <br>
  <%= turbo_frame_tag 'new_task' %>
  <%= turbo_frame_tag "tasks" do %>
  <%= render @tasks %>
  <% end %>
</div>
